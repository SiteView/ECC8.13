<?xml version="1.0" encoding="UTF-8"?>
<screens xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" 
        xsi:noNamespaceSchemaLocation="http://ofbiz.apache.org/dtds/widget-screen.xsd">
    <screen name="machineListNT">
		<section >
           <widgets>
                <decorator-screen name="main-decorator" location="${parameters.mainDecoratorLocation}">
                    <decorator-section name="body">
		               <container style="screenlet">
		                   <container style="screenlet-header">
		                       <label style="boxhead" text="${uiLabelMap.machineListNT}"/>
		                   </container>
		                   <container style="screenlet-body">
		                        <!-- html-template location="component://svecc/webapp/ecc/machine/machineList.ftl" / -->
		                        <include-form name="listMachineNT" location="component://svecc/widget/machine/MachineForm.xml"/> 	
		                        <include-form name="addMachineButtonNT" location="component://svecc/widget/machine/MachineForm.xml"/> 				                        		                        
		                   </container>
		               </container>
                    </decorator-section>
                </decorator-screen>
            </widgets>
		</section>
	</screen>
