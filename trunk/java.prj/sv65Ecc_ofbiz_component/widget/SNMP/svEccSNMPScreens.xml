<?xml version="1.0" encoding="UTF-8"?>

<screens xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" 
        xsi:noNamespaceSchemaLocation="http://ofbiz.apache.org/dtds/widget-screen.xsd">
    
    <screen name="SNMPPreference">
		<section>
            <widgets>
                <decorator-screen name="main-decorator" location="${parameters.mainDecoratorLocation}">
                    <decorator-section name="body">
		                   <container style="screenlet-header">
		                       <label style="boxhead" text="SNMPPreference"/>
		                   </container>
		                   <container style="screenlet-body">
                           <platform-specific>
	                            <html>
	                                <html-template location="component://svecc/webapp/ecc/SNMP/SNMPPreferencesTitle.ftl" />
	                            </html>
	                        </platform-specific>
	                        <include-form name="DefaultSNMPPreferences" location="component://svecc/widget/SNMP/SNMPPreferenceForm.xml"/>
                            <section>
                            	<actions>
									<service service-name="getSNMPPrefefencesList"></service>
								</actions> 
                                 <widgets>
                                    <platform-specific>
			                            <html>
			                                <html-template location="component://svecc/webapp/ecc/SNMP/AdditionalSNMPSettings.ftl" />
			                            </html>
			                        </platform-specific>
                                </widgets>
                           </section>                            
		                   </container>
                    </decorator-section>
                </decorator-screen>
            </widgets>
        </section>
    </screen>
   
    <screen name="AddSNMPPreferences">
		<section>
            <widgets>
                <decorator-screen name="main-decorator" location="${parameters.mainDecoratorLocation}">
                    <decorator-section name="body">
		                   <container style="screenlet-header">
		                       <label style="boxhead" text="AddSNMPPreferences"/>
		                   </container>
		                   <container style="screenlet-body">
                            <section>  
                              	<actions>
									<service service-name="SNMPSettingInfo"></service>
								</actions> 
                                <widgets>
                                    <platform-specific>
			                            <html>
			                                <html-template location="component://svecc/webapp/ecc/SNMP/AddSNMPPreferences.ftl" />
			                            </html>
			                        </platform-specific>
                                </widgets>
                            </section>
		                   </container>
                    </decorator-section>
                </decorator-screen>
            </widgets>
        </section>
    </screen>
 
    <screen name="SNMPTest">
		<section>    
			<actions>
				<service service-name="getSNMPPreferenceInfo"></service>
			</actions>  
            <widgets>
                <decorator-screen name="main-decorator" location="${parameters.mainDecoratorLocation}">
                    <decorator-section name="body">
	                   <container style="screenlet-header">
	                       <label style="boxhead" text="SNMPTest"/>
	                   </container>
	                   <container style="screenlet-body">
	                        <platform-specific>
	                            <html>
	                                <html-template location="component://svecc/webapp/ecc/SNMP/SNMPTest.ftl" />
	                            </html>
	                        </platform-specific>
	                   </container>
                    </decorator-section>
                </decorator-screen>
            </widgets>
        </section>
    </screen> 
    
   <screen name="otherSNMPTest">
		<section>    
			<actions>
				<service service-name="getNeedSNMPSetting"></service>
			</actions>  
            <widgets>
                <decorator-screen name="main-decorator" location="${parameters.mainDecoratorLocation}">
                    <decorator-section name="body">
	                   <container style="screenlet-header">
	                       <label style="boxhead" text="SNMPTest"/>
	                   </container>
	                   <container style="screenlet-body">
	                        <platform-specific>
	                            <html>
	                                <html-template location="component://svecc/webapp/ecc/SNMP/newSNMPTest.ftl" />
	                            </html>
	                        </platform-specific>
	                   </container>
                    </decorator-section>
                </decorator-screen>
            </widgets>
        </section>
    </screen>   
    
     <screen name="errorPage">
		<section>
            <widgets>
                <decorator-screen name="main-decorator" location="${parameters.mainDecoratorLocation}">
                    <decorator-section name="body">
	                   <container style="screenlet-header">
	                       <label style="boxhead" text="errorPage"/>
	                   </container>
	                   <container style="screenlet-body">
	                        <platform-specific>
	                            <html>
	                                <html-template location="component://svecc/webapp/ecc/SNMP/errorPage.ftl" />
	                            </html>
	                        </platform-specific>
	                   </container>
                    </decorator-section>
                </decorator-screen>
            </widgets>
        </section>
    </screen>    
         
</screens>

