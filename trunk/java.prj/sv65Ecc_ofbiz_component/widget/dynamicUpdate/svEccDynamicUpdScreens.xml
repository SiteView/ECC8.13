<?xml version="1.0" encoding="UTF-8"?>

<screens xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" 
        xsi:noNamespaceSchemaLocation="http://ofbiz.apache.org/dtds/widget-screen.xsd">
    
    <screen name="DynamicUpdPreference">
		<section>
            <widgets>
                <decorator-screen name="main-decorator" location="${parameters.mainDecoratorLocation}">
                    <decorator-section name="body">
		                   <container style="screenlet-header">
		                       <label style="boxhead" text="DynamicUpdPreference"/>
		                   </container>
		                   <container style="screenlet-body">
                            <section>
                          
                            	<actions>
									<service service-name="getDynamicUpdPrefefencesList"></service>
								</actions> 
	
                                 <widgets>
                                    <platform-specific>
			                            <html>
			                                <html-template location="component://svecc/webapp/ecc/dynamicUpdate/DynamicUpdSettings.ftl" />
			                            </html>
			                        </platform-specific>
                                </widgets>
                           </section>                            
		                   </container>
                    </decorator-section>
                </decorator-screen>
            </widgets>
        </section>
    </screen>
  
    <screen name="AddDynamicPreferences">
		<section>
            <widgets>
                <decorator-screen name="main-decorator" location="${parameters.mainDecoratorLocation}">
                    <decorator-section name="body">
		                   <container style="screenlet-header">
		                       <label style="boxhead" text="AddDynamicPreferences"/>
		                   </container>
		                   <container style="screenlet-body">
                            <section>  
                              	<actions>
									<service service-name="pagerSettingInfo"></service>
								</actions> 

                                <widgets>
                                    <platform-specific>
			                            <html>
			                                <html-template location="component://svecc/webapp/ecc/dynamicUpdate/AddAdditionalDynamicSettings.ftl" />
			                            </html>
			                        </platform-specific>
                                </widgets>
                            </section>
		                   </container>
                    </decorator-section>
                </decorator-screen>
            </widgets>
        </section>
    </screen>

</screens>

