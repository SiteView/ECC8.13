    <screen name="schedulePreferences">
		<section>
            <widgets>
                <decorator-screen name="main-decorator" location="${parameters.mainDecoratorLocation}">
                    <decorator-section name="body">
                    	<include-menu name="preferencesMenu" location="component://svecc/widget/svPreferencesMenu.xml"/>
                        <screenlet title="schedulePreferences">
                            <section>
                          	
                            	<actions>
									<service service-name="getScheduleSettingsList"></service>
								</actions> 
							 
                                 <widgets>
                                    <platform-specific>
			                            <html>
			                                <html-template location="component://svecc/webapp/ecc/schedule/scheduleSettings.ftl" />
			                            </html>
			                        </platform-specific>
                                </widgets>
                           </section>                            
                        </screenlet>
                    </decorator-section>
                </decorator-screen>
            </widgets>
        </section>
    </screen>
