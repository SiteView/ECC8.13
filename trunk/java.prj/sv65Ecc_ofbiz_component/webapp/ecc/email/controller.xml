<?xml version="1.0" encoding="UTF-8"?>
<site-conf xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:noNamespaceSchemaLocation="http://ofbiz.apache.org/dtds/site-conf.xsd">

	<request-map uri="emailPreference">
        <security https="false" auth="true"/>
		<response name="success" type="view" value="emailPreference"/>
	</request-map>

	<request-map uri="saveAndMailTest">
        <security https="false" auth="true"/>
        <event type="service" invoke="setEmailPreferences"/>
		<response name="success" type="view" value="mailTest"/>
	</request-map>
	<request-map uri="testSendMail">
		<security https="false" auth="true"/>
        <event type="service" invoke="sendEmail"/>
		<response name="success" type="view" value="emailPreference"/>
		<response name="fail" type="view" value="errorPage"/>
		<response name="error" type="view" value="errorPage"/>
	</request-map>		
	<request-map uri="AddEmailSettings">
        <security https="false" auth="true"/>
		<response name="success" type="view" value="AddEmailSettings"/>
	</request-map>	
	<request-map uri="SaveAdditionSetting">
        <security https="false" auth="true"/>
        <event type="service" invoke="AddAdditionalEmailSetting"/>
		<response name="success" type="view" value="emailPreference"/>
		<response name="fail" type="view" value="AddEmailSettings"/>
		<response name="error" type="view" value="AddEmailSettings"/>
	</request-map>	
	<request-map uri="delEmailSettings">
		<security https="false" auth="true"/>
        <event type="service" invoke="delAdditionalEmail"/>
		<response name="success" type="view" value="emailPreference"/>
	</request-map>	


	<view-map name="emailPreference" type="screen" page="component://svecc/widget/email/svEccEmailScreens.xml#emailPreference"></view-map>
	<view-map name="AddEmailSettings" type="screen" page="component://svecc/widget/email/svEccEmailScreens.xml#AddEmailSettings"></view-map>	
    <view-map name="mailTest" type="screen" page="component://svecc/widget/email/svEccEmailScreens.xml#mailTest"></view-map>
    <view-map name="errorPage" type="screen" page="component://svecc/widget/email/svEccEmailScreens.xml#errorPage"></view-map>		
</site-conf>

